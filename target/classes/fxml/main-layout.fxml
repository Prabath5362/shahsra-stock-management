<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.erpsystem.controller.MainController">
   
   <top>
      <VBox style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0; -fx-padding: 15 20;">
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <Label fx:id="headerTitle" text="ERP System Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>
               <Label fx:id="headerSubtitle" text="Inventory &amp; Sales Management System" style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
               <Button fx:id="themeToggleBtn" onAction="#toggleTheme" text="🌙" style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 8;" />
               <Label fx:id="currentUserLabel" text="Administrator" style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
            </HBox>
         </HBox>
      </VBox>
   </top>
   
   <left>
      <VBox fx:id="sidebar" prefWidth="250.0" style="-fx-background-color: #f8f8f8; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;">
         
         <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;">
            <Label text="ERP System" style="-fx-font-size: 16px; -fx-font-weight: bold;">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </VBox>
         
         <VBox fx:id="navigationMenu" spacing="0.0" VBox.vgrow="ALWAYS">
            
            <Button fx:id="dashboardBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showDashboard" text="📊 Dashboard" 
                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
            
            <Separator />
            
            <Label text="Master Data" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #666666;">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            
            <Button fx:id="suppliersBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showSuppliers" text="🏢 Suppliers" 
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
            
            <Button fx:id="customersBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showCustomers" text="👥 Customers" 
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
            
            <Button fx:id="itemsBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showItems" text="📦 Items" 
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
            
            <Separator />
            
            <Label text="Transactions" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #666666;">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            
            <Button fx:id="purchasingBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showPurchasing" text="🛒 Purchasing" 
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
            
            <Button fx:id="salesBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showSales" text="💰 Sales" 
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
            
            <Separator />
            
            <Label text="Reports" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #666666;">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            
            <Button fx:id="inventoryBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showInventory" text="📋 Inventory" 
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
            
            <Button fx:id="financeBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showFinance" text="💹 Finance" 
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-padding: 15 20; -fx-alignment: center-left; -fx-border-width: 0 0 1 0; -fx-border-color: #cccccc;" />
         </VBox>
         
         <VBox alignment="CENTER" spacing="5.0" style="-fx-padding: 20;">
            <Label text="Version 1.0.0" style="-fx-font-size: 10px; -fx-text-fill: #999999;">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </VBox>
         
      </VBox>
   </left>
   
   <center>
      <StackPane fx:id="contentArea" style="-fx-background-color: white; -fx-padding: 20;">
         <Label text="Welcome to ERP System" style="-fx-font-size: 24px; -fx-text-fill: #666666;" />
      </StackPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 10 20; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0; -fx-background-color: #f8f8f8;">
         <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #333333;" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="connectionStatusLabel" text="Database: Connected" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 4 8; -fx-font-size: 11px; -fx-font-weight: bold;" />
      </HBox>
   </bottom>
   
</BorderPane>