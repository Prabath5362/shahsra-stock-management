<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.erpsystem.controller.MainController">
   
   <top>
      <VBox styleClass="header">
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <Label fx:id="headerTitle" text="ERP System Dashboard" styleClass="header-title">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>
               <Label fx:id="headerSubtitle" text="Inventory &amp; Sales Management System" styleClass="header-subtitle" />
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
               <Button fx:id="themeToggleBtn" onAction="#toggleTheme" text="🌙" styleClass="button,secondary" />
               <Label fx:id="currentUserLabel" text="Administrator" styleClass="header-subtitle" />
            </HBox>
         </HBox>
      </VBox>
   </top>
   
   <left>
      <VBox fx:id="sidebar" prefWidth="250.0" styleClass="sidebar">
         
         <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;">
            <Label text="ERP System" styleClass="label,subtitle">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </VBox>
         
         <VBox fx:id="navigationMenu" spacing="0.0" VBox.vgrow="ALWAYS">
            
            <Button fx:id="dashboardBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showDashboard" text="📊 Dashboard" 
                    styleClass="nav-button,active" />
            
            <Separator />
            
            <Label text="Master Data" styleClass="nav-section-label">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            
            <Button fx:id="suppliersBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showSuppliers" text="🏢 Suppliers" 
                    styleClass="nav-button" />
            
            <Button fx:id="customersBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showCustomers" text="👥 Customers" 
                    styleClass="nav-button" />
            
            <Button fx:id="itemsBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showItems" text="📦 Items" 
                    styleClass="nav-button" />
            
            <Separator />
            
            <Label text="Transactions" styleClass="nav-section-label">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            
            <Button fx:id="purchasingBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showPurchasing" text="🛒 Purchasing" 
                    styleClass="nav-button" />
            
            <Button fx:id="salesBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showSales" text="💰 Sales" 
                    styleClass="nav-button" />
            
            <Separator />
            
            <Label text="Reports" styleClass="nav-section-label">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            
            <Button fx:id="inventoryBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showInventory" text="📋 Inventory" 
                    styleClass="nav-button" />
            
            <Button fx:id="financeBtn" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" 
                    onAction="#showFinance" text="💹 Finance" 
                    styleClass="nav-button" />
         </VBox>
         
         <VBox alignment="CENTER" spacing="5.0" style="-fx-padding: 20;">
            <Label text="Version 1.0.0" styleClass="version-label">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </VBox>
         
      </VBox>
   </left>
   
   <center>
      <StackPane fx:id="contentArea" styleClass="content-area">
         <Label text="Welcome to ERP System" styleClass="welcome-label" />
      </StackPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="status-bar">
         <Label fx:id="statusLabel" text="Ready" styleClass="status-text" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="connectionStatusLabel" text="Database: Connected" styleClass="status-success" />
      </HBox>
   </bottom>
   
</BorderPane>